@model LexPharm.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";


    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container-fluid wrapper hero_section1">
    <form class="form-signup p-3 mt-5" asp-controller="Account" asp-action="Login">


        <div class="row">
            <div class="col form-section">
                <h2 class="text-center text-light">LOGIN</h2>
                <div class="form-group">
                    <input type="text"  class="form-control" placeholder="Username" asp-for="UserName" />
                </div>
                <div class="form-group">
                    <input type="password" name="password" class="form-control" placeholder="passsword" asp-for="Password" />
                </div>


                <button type="submit" role="button" class=" mt-3 form-control btn-grad">Submit</button>
            </div>
        </div>




    </form>
</div>
