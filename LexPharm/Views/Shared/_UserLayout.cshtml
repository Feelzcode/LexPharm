<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LexPharm</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/pharm.css" rel="stylesheet" />
    @*<script src="~/js/sweetalert.min.js"></script>*@
    <link href="~/vendor/aos/aos.css" rel="stylesheet" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    

</head>
<body>
    <header>
        <div class="container-fluid" style="background-color: #ebebe0;">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="d-flex justify-content-end p-1 ">
                    <i class="fa fa-key mt-1 text-danger"></i>
                    <a asp-area="" asp-controller="Account" asp-action="LogOut" class="mr-1 logo-text1">LogOut</a>
                    <span class="border-right border-dark"></span>
                    <i class="fa fa-sign-in mt-1 ml-1 text-danger" aria-hidden="true"></i>
                    <a asp-area="" asp-controller="User" asp-action="Index" class="ml-1 logo-text1">Dashboard</a>
                </div>
            }
            else
            {
                <div class="d-flex justify-content-end p-1 ">
                    <i class="fa fa-key mt-1 text-danger"></i>
                    <a asp-area="" asp-controller="Account" asp-action="Login" class="mr-1 logo-text1">Login</a>
                    <span class="border-right border-dark"></span>
                    <i class="fa fa-sign-in mt-1 ml-1 text-danger" aria-hidden="true"></i>
                    <a asp-area="" asp-controller="Account" asp-action="Register" class="ml-1 logo-text1">sign-up</a>
                </div>
            }
        </div>

        <nav class="navbar navbar-expand-lg  navbar-light sticky-top">
            <!-- logo starts here -->
            <div class="mt-3">
                <a class="navbar-brand pb-3"><img src="~/images/logo-main.png" alt="Alternate Text" style="width:100px;height:70px";></a>
                <h4 class="navbar-brand logo-text2"style="color: #b12;font-weight:bold;">Lex<span class="logo-text">Pharm</span></h4>

            </div>
          
            <!-- logo ends here -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="col-9 collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item p-2">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link ml-3 hvr-underline-from-center ">
                            <i class="fa fa-home text-danger pr-2" aria-hidden="true"></i>Home
                        </a>
                    </li>

                    <li class="nav-item p-2">
                        <a  class="nav-link ml-3 hvr-underline-from-center" asp-controller="User" asp-action="DrugStore" ><i class="fa fa-shopping-cart text-danger pr-2" aria-hidden="true"></i>DrugStore</a>
                    </li>

                    <li class="nav-item p-2">
                        <a  class="nav-link ml-3 hvr-underline-from-center"asp-area="" asp-controller="User" asp-action="ConsultDoctor">
                            <i class="fa fa-medkit text-danger pr-2" aria-hidden="true"></i>Consult Doctor
                        </a>
                    </li>

                    <li class="nav-item p-2">
                        <a  class="nav-link ml-3 hvr-underline-from-center"asp-area="" asp-controller="User" asp-action="DoctorsAdvice"><i class="fa fa-medkit text-danger pr-2" aria-hidden="true"></i>Doctor'sAdvice'</a>
                    </li>

                    <li class="nav-item p-2">
                        <a  class="nav-link ml-3 hvr-underline-from-center" asp-controller="User"  asp-action="Cart" ><i class="fa fa-medkit text-danger pr-2" aria-hidden="true"></i>Your Cart</a>
                    </li>
                </ul>


            </div>

        </nav>
       


    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
           
            @RenderBody()
        </main>
    </div>





    <footer class="border-top footer_section text-muted">



        <div class="container-fluid mt-5 pt-5 fluid_section footer_section ">

            <div class="row mx-auto">
                <div class="col-lg-4 border-bottom border-danger  text-light">
                    <h6 class="text-center"><i class="fa fa-phone-square fa-2x text-danger" aria-hidden="true"></i> Phone line</h6>
                </div>

                <div class="col-lg-4 border-bottom mx-auto text-light">
                    <h6 class="text-center"><i class="fa fa-envelope fa-2x text-danger" aria-hidden="true"></i> Email</h6>
                </div>

                <div class="col-lg-4 border-bottom border-danger text-light">
                    <h6 class="text-center"><i class="fa fa-address-book-o fa-2x text-danger" aria-hidden="true"></i>  Address</h6>
                </div>
            </div>



            <h4 class="text-center text-danger mt-4">Contact Form</h4>
            <div class="row justify-content-around ">
                <div class="col-lg-4 md-6 sm-12 ">

                    <div class="form-group text-white">
                        <label for="UserName">Username:</label>
                        <input type="text" class="form-control" name="" placeholder="Enter username">
                    </div>

                    <div class="form-group text-white">
                        <label for="password">PassWord:</label>
                        <input type="text" class="form-control" name="" placeholder="Enter password">
                    </div>
                </div>


                <div class="col-lg-4 md-6 sm-12">
                    <div class="form-group text-white">
                        <label for="Search">Search</label>
                        <input type="text" class="form-control" name="" placeholder="Enter username">
                    </div>
                </div>
            </div>

        </div>




        <div class="container-fluid  text-white">
            <div class="row justify-content-center">

                <div class="col-4 mt-3">
                    <h4 class="text-danger text-center">Partners</h4>
                    <ul class="list-unstyled text-center">
                        <li><a href="" class="text-white">Goldstores</a></li>
                        <li><a href="" class="text-white">Juhel</a></li>
                        <li><a href="" class="text-white">Nestle</a></li>
                        <li><a href="" class="text-white">Annox</a></li>
                        <li><a href="" class="text-white">Revot</a></li>
                    </ul>

                </div>

                <div class="col-4 mt-3">
                    <h4 class="text-danger text-center">Branches</h4>
                    <ul class="list-unstyled text-center">
                        <li><a href="" class="text-white">Lagos</a></li>
                        <li><a href="" class="text-white">Enugu</a></li>
                        <li><a href="" class="text-white">Abuja</a></li>
                        <li><a href="" class="text-white">Ebonyi</a></li>
                        <li><a href="" class="text-white">Kaduna</a></li>
                    </ul>
                </div>

                <div class="col-4 mt-3">
                    <h4 class="text-danger text-center">Social media</h4>
                    <ul class="list-unstyled text-center">
                        <li><a href="" class="text-white ">facebook</a></li>
                        <li><a href="" class="text-white">Instagram</a></li>
                        <li><a href="" class="text-white">twitter</a></li>
                        <li><a href="" class="text-white">whatsapp</a></li>
                        <li><a href="" class="text-white">Tik-Tok</a></li>
                    </ul>
                </div>

            </div>
        </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
</body>
</html>
